# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                  controllers.Application.index




#MONETARYSYSTEM
POST        /MONETARYSYSTEM/RATING          controllers.MonetaryController.sendRating()
POST        /MONETARYSYSTEM/RISK            controllers.MonetaryController.sendRisk()
GET         /MONETARYSYSTEM/CARTE           controllers.MonetaryController.getCarte()
GET         /MONETARYSYSTEM/INCIDENT        controllers.MonetaryController.getIncidentPaiement()



#BISYSTEM
POST        /BISYSTEM/TICKET-CAISSE         controllers.BisystemController.sendTicketCaisse()

#SITEWEB
POST        /SITEWEB/CREATION-CLIENT        controllers.SiteWebController.sendCreationClient()
POST        /SITEWEB/PROMOTION              controllers.SiteWebController.sendPromotion()
GET         /SITEWEB/TICKET-CAISSE          controllers.BackofficeController.getTicketCaisse()
POST        /SITEWEB/MODIFICATION-CLIENT    controllers.BackofficeController.sendModificationClient()

#BACKOFFICE
POST        /BACKOFFICE/CREATION-CLIENT     controllers.BackofficeController.sendCreationClient()
GET         /BACKOFFICE/TICKET-CAISSE       controllers.BackofficeController.getTicketCaisse()
POST        /BACKOFFICE/MODIFICATION-CLIENT controllers.BackofficeController.sendModificationClient()
POST        /BACKOFFICE/PROMOTION           controllers.SiteWebController.sendPromotion()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

    